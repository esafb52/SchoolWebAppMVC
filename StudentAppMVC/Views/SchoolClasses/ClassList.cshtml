@model StudentAppMVC.View_Models.ClassListViewModel
@{
    Layout = null;
}

<div class="form-group">
    @Html.LabelFor(model => model.ClassId, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.ClassId, Model.Classes, "Select", htmlAttributes: new { @class = "form-control", @id = "Class-DropdownID" })
        @Html.ValidationMessageFor(model => model.ClassId, "", new { @class = "text-danger" })
    </div>
</div>

